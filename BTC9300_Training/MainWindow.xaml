<Window x:Class="BTC9300Training.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTC9300Training"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="179" Margin="280,401,0,0" Command="{Binding AddCommand}" Height="57"/>
        <TextBox DataContext="{Binding Btc}"
                 Name="textBox1" HorizontalAlignment="Left"
                 Height="163" TextWrapping="Wrap" 
                 Text="{Binding Temperature, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" 
                 
                 Width="452" Margin="152,155,0,0"/>

    </Grid>
</Window>
    
